packages:
  yum:
    python3-devel: []
    python3: []
    python3-pip: []
    docker: []
    clang: []
files:
  "/etc/requirements.txt" :
    mode: "000755"
    owner: root
    group: root
    source: https://raw.githubusercontent.com/pasiasty/cocoder/master/requirements.txt
commands:
  01_install_python_dependencies:
    command: pip3 install -r /etc/requirements.txt
  02_start_docker_service:
    command: systemctl start docker
  03_pull_python_image:
    command: docker pull python:latest
  04_installing_epel:
    command: amazon-linux-extras install epel -y
  05_enabling_epel:
    command: yum-config-manager --enable epel
  06_install_snapd:
    command: yum install snapd
  07_install_clangd:
    command: yum install clangd
container_commands:
  01_allow_running_docker_without_sudo:
    command: usermod -a -G docker webapp
  02_install_gopls:
    command: go install golang.org/x/tools/gopls
  03_build_gopls:
    command: go build golang.org/x/tools/gopls
