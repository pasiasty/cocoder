packages:
  yum:
    python3-devel: []
    python3: []
    python3-pip: []

files:
  "/home/ec2-user/requirements.txt" :
    mode: "000755"
    owner: root
    group: root
    source: https://raw.githubusercontent.com/pasiasty/cocoder/master/requirements.txt
commands:
  install_python_dependencies:
    command: pip3 install -r requirements.txt
    cwd: /home/ec2-user
    test: whereis pyls
container_commands:
  install_python_dependencies:
    command: pip3 install -r requirements.txt
    test: whereis pyls
